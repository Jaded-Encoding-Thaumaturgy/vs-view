{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "schedule": [
    "at 14:00 on Monday",
    "at 14:00 on Thursday"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "groupName": "Python dependencies"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}